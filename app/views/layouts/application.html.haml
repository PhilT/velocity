!!!strict
%html
  %head
    %title== Bustle - #{STRAPLINE}
    = stylesheet_link_tag 'application'
    = javascript_include_tag "lib/#{RAILS_ENV}/jquery", 'lib/jquery-ui.min', 'lib/jquery.delay', 'lib/jquery.hint', 'application'
  %body
    %h1
      Bustle
      %sup= STRAPLINE
    %div#session
      - if current_user
        = link_to 'Logout', user_session_path(current_user), :method => :delete
      - else
        = link_to 'Login', new_user_session_path
    %div#messages
      %span.notice= flash[:notice]
      %span.error= flash[:error]
    = yield

