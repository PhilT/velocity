%li.task{:id => "task_#{task.id || 'new'}", :class => task.state}
  - form_for task, :builder => CustomFormBuilder, :edit => @field, :html => {:class => 'ajaxForm'} do |f|
    %ul.title
      %li{:class => task.type}= link_to task.type, task_path(task, 'task[bug]' => (!task.bug?).to_s), :class => :put
      = f.label :id
      = f.text :name

    %ul.description
      = f.label :author_id
      = f.select :assigned_id, :collection => @developers
      - if task.verified?
        %li= " verified by #{task.verifier.name}"
      = f.label :started_on
      = f.label :completed_on

    %ul.actions
      %li.action= button_to task.action, {}, :class => :put
      = f.submit

