- if Task.other_updates?(current_user)
  == $.jGrowl("Please refresh", { header: 'Tasks reordered', sticky: true });

- Task.assigned_to(current_user).each do |task|
  == $.jGrowl("'#{task.name}' has been assigned to you", { header: 'Task Assignment', sticky: true });

- @created_tasks.each do |task|
  == $.jGrowl("#{task.name}", { header: 'New task', sticky: true });

- @updated_tasks.each do |task|
  - if task.updated_field != 'position'
    == $('#task_#{task.id}').replaceWith('#{escape_javascript(render(task))}')

== $('.finished').replaceWith("#{escape_javascript(render :partial => 'finish_button')}")

== $('.now_tasks').html("#{now_tasks_heading}")
== $('.later_tasks').html("#{future_tasks_heading}")

