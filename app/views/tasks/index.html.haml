%ul#stats
  %li#velocity{:title => Release.velocity.round}
    = label_tag 'velocity', 'Velocity:'
    = display_velocity(Release.velocity)
    %div#info
      Taken from Release
      = Release.last.finished_at.to_s rescue "(none)"

%h3
  %span{:class => 'now_tasks'}
    = current_tasks_heading
  = render :partial => 'finish_button'
%div{:id => 'bugs'}
  = render :partial => 'tasks', :object => @bugs
%div{:id => 'stories'}
  = render :partial => 'stories', :object => @stories
%div{:id => 'future'}
  = render :partial => 'tasks', :object => @future_tasks

%div.new_task
  = render :partial => 'tasks', :object => @new_tasks
  = link_to 'New Story', new_story_path, :class => 'new_story_link'
