%div#stats
  %div#velocity
    Velocity: #{display_velocity(Release.velocity)}
    %span#info
      Taken from Release
      = Release.last.finished_at.to_s rescue "(none)"

%div#container
  %div#content
    %div.release
      %h2
        %span.now_tasks Current Release
        = render :partial => 'finish_button'
      %div#bugs
        = render :partial => 'tasks', :object => @bugs
      %div#future
        = render :partial => 'tasks', :object => @future_tasks

  %div#groups
    = render :partial => 'stories/groups'

%div.new_task
  = render :partial => 'new_task'
  = render :partial => 'new_group'

