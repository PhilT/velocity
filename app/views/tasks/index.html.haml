%div#stats
  %div#velocity{:title => Release.velocity}
    Velocity: #{Release.velocity}
    %span.info
      (features per week)
    %div.info
      Taken from Release
      = Release.last.created_at.to_s rescue "(none)"

%div#container
  %div#content
    - if flash[:error]
      %div.error= flash[:error]
    - if flash[:notice]
      %div.notice= flash[:notice]

    %div.release
      %h2
        %span.now_tasks Current Release
        = render :partial => 'finish_button'
      %div= render :partial => 'tasks', :object => @tasks

  %div#groups
    = render :partial => 'stories/groups'

%div.new_task
  = render :partial => 'new_task'
  = render :partial => 'new_group'

